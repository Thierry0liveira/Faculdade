<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".ui.furtos.FurtosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etxtDataFurto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="Data"
            android:textAlignment="center"
            android:textSize="15sp"
            android:background="@color/gray"
            android:inputType="date"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/etxtHoraFurto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Hora"
            android:textAlignment="center"
            android:textSize="15sp"
            android:background="@color/gray"
            android:inputType="time"
            android:textColorHint="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etxtCodBarrasFurto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="Código de Barras"
            android:textAlignment="center"
            android:textSize="15sp"
            android:background="@color/gray"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/etxtQuantFurto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray"
            android:hint="Quantidade"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/furtosLista"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp" />

    <RadioGroup
        android:id="@+id/rdFurto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtAbordado"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="ABORDADO" />

        <RadioButton
            android:id="@+id/rbtNaoAbordado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="NÃO ABORDADO"
            android:layout_marginStart="50dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/etxtObsFurto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        android:hint="OBSERVAÇÕES"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="15sp" />

        <Button
            android:id="@+id/btAddFurto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Registrar Furto"
            android:textAlignment="center"
            android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btConFurto"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Consultar Furto"
            android:textAlignment="center"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btExcFurto"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Excluir Furto"
            android:textAlignment="center"
            android:layout_marginLeft="12dp"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>